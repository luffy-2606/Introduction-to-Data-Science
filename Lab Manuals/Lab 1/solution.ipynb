#Task 2

char = input("Enter a character: ")

if (char == "R"or char=="r"):
  len1 = float(input("Enter the length of Rectangle: "))
  wid = float(input("Enter the width of Rectangle: "))
  per = len1+len1+wid+wid
  area = len1 * wid
  print("Perimeter is: ", per)
  print("Area is: ", area)
elif (char == "T" or char == "t"):
  a = float(input("Enter the length A of triangle: "))
  b = float(input("Enter the length B of triangle: "))
  c = float(input("Enter the length C of triangle: "))
  bs = float(input("Enter the base of triangle: "))
  h = float(input("Enter the height of triangle: "))

  per = a + b + c
  area = 0.5 * bs * h

  print("Perimeter is: ", per)
  print("Area is: ", area)
elif (char == "C" or char == "c"):
  r = float(input("Enter the radius of circle: "))
  per = 2 * 3.14 * r
  area = 3.14 * r * r

  print("Perimeter is: ", per)
  print("Area is: ", area)

else:
  print("The entered value is invalid")

